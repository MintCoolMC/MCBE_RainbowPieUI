{
  "namespace": "xbl_friend_finder",

  "main_panel/searching_profile_panel": {
    "texture": "textures/ui/White",
    "color": "$rainbowpie_ui_theme_text_background_color",
    "alpha": "$rainbowpie_ui_theme_text_background_alpha"
  },

  "main_panel/searching_profile_panel/searching_label": {
    "color": "$rainbowpie_ui_theme_text_text_color"
  },

  "xbl_friend_finder": {
    "$screen_bg_content": "settings_common.background_black"
  },
  
  "message_label": {
    "font_type": "$global_font_type",
    "backup_font_type": "$global_font_type_backup"
  },

  "progress_loading/stack_panel/centerer_0/network_failure_text": {
    "font_type": "$global_font_type",
    "backup_font_type": "$global_font_type_backup"
  },

  "main_panel/find_friends_label": {
    "font_type": "$global_font_type",
    "backup_font_type": "$global_font_type_backup"
  },

  "xbl_friend_finder_screen_content/dialog": {
    "ignored": true
  },

  "xbl_friend_finder_screen_content": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          { "background_all@rainbowpie.background_all": {} },
          {
            "header@rainbowpie.header": {
              "$header_title": "xbox.profile.addFriend"
            }
          },
          {
            "main_panel@xbl_friend_finder.main_panel": {
              "size": [ 250, "100%c" ],
              "offset": [ 0, "-20%" ],
              "layer": 1
            }
          }
        ]
      }
    ]
  }
}