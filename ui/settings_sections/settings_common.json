  "option_dropdown_control_button_mode_panel": {
    "type": "panel",
    "$panel_size|default": [ "100%", 25 ],
    "size": "$panel_size",
    "$has_tip|default": false,
    "$tip_text|default": "TIP TEXT",
    "variables": [
      {
        "requires": "$has_tip",
        "$panel_size": [ "100%", 52 ]
      }
    ],
    "controls": [
      {
        "tip_panel": {
          "ignored": "(not $has_tip)",
          "type": "panel",
          "size": [ "100%", 25 ],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "controls": [
            {
              "background_image": {
                "type": "image",
                "texture": "textures/ui/White",
                "size": [ "100%", "100%" ],
                "color": "$rainbowpie_ui_theme_text_background_color",
                "alpha": "$rainbowpie_ui_theme_text_background_alpha",
                "layer": 1,
                "controls": [
                  {
                    "tip_label": {
                      "type": "label",
                      "text_alignment": "left",
                      "layer": 1,
                      "size": [ "100% - 4px", "20px" ],
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "text": "$tip_text",
                      "font_type": "$global_font_type",
                      "backup_font_type": "$global_font_type_backup",
                      "$text_color|default": [ 0.0, 0.0, 0.0 ],
                      "color": "$rainbowpie_ui_theme_text_text_color",
                      "variables": [
                        {
                          "requires": "$rainbowpie_ui_theme_text_text_light",
                          "$text_color": [ 1.0, 1.0, 1.0 ]
                        }
                      ]
                    }
                  },
                  {
                    "bottom_image": {
                      "type": "image",
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "offset": [ 0, 0 ],
                      "texture": "textures/ui/White",
                      "size": [ "100%", 2 ],
                      "layer": 3,
                      "color": "$rainbowpie_ui_theme_toggle_background_checked_default_btbar_color",
                      "alpha": "$rainbowpie_ui_theme_toggle_background_checked_default_btbar_alpha"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "option_dropdown_control_button_mode@settings_common.option_dropdown_control_button_mode": {
          "anchor_from": "top_middle",
          "anchor_to": "top_middle"
        }
      }
    ]
  },

