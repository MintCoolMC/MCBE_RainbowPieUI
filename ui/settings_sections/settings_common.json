  "radio_with_label_core_button_mode@common.radio_toggle": {
    "$unchecked_control|default": "settings_common.dropdown_button_mode_unchecked",
    "$checked_control|default": "settings_common.dropdown_button_mode_checked",
    "$unchecked_hover_control|default": "settings_common.dropdown_button_mode_unchecked_hover",
    "$checked_hover_control|default": "settings_common.dropdown_button_mode_checked_hover",
    "$unchecked_locked_control|default": "settings_common.dropdown_button_mode_locked",
    "$unchecked_locked_hover_control|default": "settings_common.dropdown_button_mode_locked",
    "$checked_locked_control|default": "settings_common.dropdown_button_mode_checked_locked",
    "$checked_locked_hover_control|default": "settings_common.dropdown_button_mode_locked",
    "$radio_toggle_group": true,
    "size": [ "100%", "100%" ],
    "$toggle_name|default": "$toggle_state_binding_name",
    "$toggle_enabled_binding_name": "$option_enabled_binding_name",

    "enabled": "$enabled",
    "$toggle_enabled_binding_type": "global",
    "variables": [
      {
        "requires": "(not $option_enabled_binding_name or not $enabled)",
        "$toggle_enabled_binding_name": "#not_data_bound",
        "$toggle_enabled_binding_type": "none"
      }
    ]
  },

