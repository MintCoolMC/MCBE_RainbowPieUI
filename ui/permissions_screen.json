  "player_grid_item": {
    "size": [ "100%", 25 ]
  },

  "player_grid_item/player_toggle": {
    "size": [ "100%", "25px" ]
  },

  "player_toggle": {
    "size": [ "100%", "25px" ],
    "$checked_control": "permissions.checked_left_blue_bar",
    "$checked_hover_control": "permissions.checked_left_blue_bar_hover",
    "$unchecked_hover_control": "permissions.unchecked_noleft",
    "$unchecked_control": "permissions.unchecked_noh"
  },

  "permissions_options_scrolling_panel": {
    "size": [ "100% - 2px", "100%" ]
  },

  "permissions_options_grid_item": {
    "controls": [
      {
        "option_toggle@settings_common.option_toggle": {
          "$main_header_text_color": "$rainbowpie_ui_theme_text_text_color",
          // "variables": [
          //   {
          //     "requires": "$rainbowpie_ui_theme_text_text_light",
          //     "$main_header_text_color": [ 1.0, 1.0, 1.0 ]
          //   }
          // ],
          "$option_label": "#option_name",
          "$option_binding_name": "#option_toggle",
          "$option_enabled_binding_type": "global",
          "$option_enabled_binding_name": "#can_edit_permissions",
          "$toggle_state_binding_name": "#option_toggle_state",
          "$toggle_grid_collection_name": "permissions_collection",
          "$toggle_binding_type": "collection",
		      "$toggle_enabled_binding_type": "global",
		      "$toggle_enabled_binding_name": "#can_edit_permissions",
          "$toggle_name": "option_toggle",
          "$binding_type": "collection",
          "$label_bindings": [
            {
              "binding_name": "#option_name",
              "binding_type": "collection",
              "binding_collection_name": "permissions_collection"
            }
          ]
        }
      }
    ]
  },

  "permission_level_dropdown": {
    // Rainbow Pie Edit
    "$show_option_label": false,
    "$option_dropdown_size": [ "100%", 25 ],
    "$button_mode": true,
    "$button_mode_type": "4",
    "$1_binding_name": "#permission_level_radio_visitor",
    "$2_binding_name": "#permission_level_radio_member",
    "$3_binding_name": "#permission_level_radio_operator",
    "$4_binding_name": "#permission_level_radio_custom",
    "$1_label_text": "permissions.level.visitor",
    "$2_label_text": "permissions.level.member",
    "$3_label_text": "permissions.level.operator",
    "$4_label_text": "permissions.level.custom"
