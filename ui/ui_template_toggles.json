    "$glyph_color": "$rainbowpie_button_text_hover_color",
    "$border_visible": false
  },

  "toggle_content_panel": {
  },

  "content_toggle_label_panel/toggle_label": {
    "font_type": "$global_font_type",
    "backup_font_type": "$global_font_type_backup",
    "color": "$content_toggle_label_color",
    "$content_toggle_label_color|default": "$text_color"
  },

  "toggle_checkbox_checked_locked": {
    "$text_color": [ 1.0, 1.0, 1.0 ]
  },

  "toggle_checkbox_unchecked_locked": {
    "$text_color": [ 1.0, 1.0, 1.0 ]
  },

  "toggle_checkbox_checked_hover": {
    "$content_alpha": 1
  },

  "toggle_checkbox_unchecked_hover": {
    "$content_alpha": 1,
    "$text_color": [ 1.0, 1.0, 1.0 ]
  },

  "toggle_checkbox_checked": {
    "$content_alpha": 1
  },

  "toggle_checkbox_unchecked": {
    "$content_alpha": 1,
    "$text_color": [ 1.0, 1.0, 1.0 ]
  },

  "toggle_checked_locked": {
    "$text_color": "$hover_text_color"
  },

  "toggle_unchecked_locked": {
    "$text_color": "$hover_text_color"
  },

  "toggle_locked": {
    "$text_color": "$hover_text_color"
  },

