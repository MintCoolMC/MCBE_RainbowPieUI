    "$rainbowpie_button_color": "$rainbowpie_button_pressed_color",
    "$text_color": "$rainbowpie_button_text_pressed_color",
    "$glyph_color": "$rainbowpie_button_text_pressed_color",
    "$border_visible": false
  },
  
  "toggle_unchecked_hover": {
    "$new_ui_button_texture": "textures/ui/White",
